<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_image_small"
    tools:context=".MainActivity">
    <ImageButton
        android:id="@+id/profile_page_sign_out"
        android:backgroundTint="@color/gradient0"
        android:background="@drawable/ic_power_settings_new_white_24dp"
        android:visibility="gone"
        android:layout_margin="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="Ride Along"
        android:textColor="@color/maroon"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="30dp"
        android:clipToPadding="false">

        <TextView
            android:layout_width="200dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Hello there!&#x0A;Who are you at this time?"
            android:maxLines="2"
            android:lines="2"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="30dp"/>
        <Button
            android:id="@+id/driver_mode_button"
            android:elevation="10dp"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:text="Driver"
            android:drawableLeft="@drawable/ic_directions_car_white_24dp" />
        <Button
            android:id="@+id/rider_mode_button"
            android:elevation="10dp"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Passenger"
            android:drawableLeft="@drawable/ic_person_pin_white_24dp" />

    </LinearLayout>

    <include layout="@layout/include_navbar"/>

</RelativeLayout>
